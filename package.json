{
  "name": "argon-commander",
  "private": true,
  "version": "1.0.0-rc1",
  "type": "module",
  "scripts": {
    "preinstall": "husky install",
    "precommit": "tsx scripts/checkPrecommit.ts",
    "dev": "vite",
    "tsc": "tsc && yarn workspaces foreach --all run tsc",
    "tsc:watch": "tsc --watch",
    "build": "yarn build:version && yarn build:server && vue-tsc --noEmit && vite build",
    "build:workspace": "yarn workspaces foreach --all run build",
    "build:server": "yarn workspace @argonprotocol/commander-bot run build && tsx scripts/buildServer.ts",
    "build:version": "tsx scripts/syncVersions.ts",
    "build:config": "tsx scripts/updateNetworkConfigs.ts",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "sh -c 'TAURI_PORT=${COMMANDER_INSTANCE##*:}; if [ \"$TAURI_PORT\" = \"$COMMANDER_INSTANCE\" ]; then unset TAURI_PORT; fi; yarn tauri dev --config=\"{\\\"build\\\":{\\\"devUrl\\\":\\\"http://localhost:${TAURI_PORT:-1420}\\\"}}\"'",
    "tauri:dev:local": "NODE_ENV=localnet yarn tauri:dev",
    "lint": "prettier -w bot core src-vue cli",
    "lint:check": "prettier --check bot core cli src-vue && eslint bot core cli src-vue --ext .ts --cache --max-warnings=0",
    "eslint": "eslint bot core cli src-vue --ext .ts --cache --fix",
    "test": "vitest --run",
    "typecheck": "vue-tsc --noEmit && yarn workspaces foreach --all run tsc --noEmit",
    "update-data": "tsx data-generators/all.ts",
    "docker:clean": "yarn docker:local down -v && yarn docker:argon down",
    "docker:local": "docker compose -f docker-compose.yml",
    "docker:argon": "docker compose -f ../mainchain/docker-compose.yml --profile=pricing --env-file=../mainchain/.env.local",
    "docker:build": "yarn docker:argon up --build && yarn docker:local --build",
    "docker:up": "yarn docker:clean && yarn docker:argon up -d && yarn docker:local up -d",
    "prepare": "husky"
  },
  "dependencies": {
    "@argonprotocol/bitcoin": "^1.3.7",
    "@argonprotocol/commander-core": "workspace:*",
    "@argonprotocol/mainchain": "^1.3.7",
    "@chenfengyuan/vue-countdown": "^2.1.3",
    "@flaticon/flaticon-uicons": "^3.3.1",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@mempool/mempool.js": "^3.0.0",
    "@ngraveio/bc-ur": "^1.1.13",
    "@tailwindcss/vite": "^4.1.12",
    "@tauri-apps/api": "~2.8.0",
    "@tauri-apps/plugin-autostart": "^2.5.0",
    "@tauri-apps/plugin-dialog": "~2.4.0",
    "@tauri-apps/plugin-fs": "~2.4.2",
    "@tauri-apps/plugin-http": "~2.5.2",
    "@tauri-apps/plugin-log": "~2.7.0",
    "@tauri-apps/plugin-opener": "~2.5.0",
    "@tauri-apps/plugin-os": "~2.3.1",
    "@tauri-apps/plugin-process": "~2.3.0",
    "@tauri-apps/plugin-shell": "~2.3.1",
    "@tauri-apps/plugin-sql": "~2.3.0",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "@tauri-controls/vue": "^0.4.0",
    "bignumber.js": "^9.3.1",
    "buffer": "^6.0.3",
    "camelcase-keys": "^9.1.3",
    "chart.js": "^4.4.9",
    "chartjs-adapter-dayjs-4": "^1.0.4",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "mitt": "^3.0.1",
    "motion-v": "^1.7.0",
    "numeral": "^2.0.6",
    "ordinal": "^1.0.3",
    "pinia": "^3.0.3",
    "qrcode": "^1.5.4",
    "qrcode-vue": "^1.2.0",
    "reka-ui": "^2.5.0",
    "sass-embedded": "^1.90.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "vitest": "^3.2.4",
    "vue": "^3.5.20",
    "zod": "^3.25.55"
  },
  "workspaces": [
    "bot",
    "core",
    "cli"
  ],
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.2",
    "@types/node": "^22.18.0",
    "@types/numeral": "^2.0.5",
    "@types/qrcode": "^1.5.5",
    "@vitejs/plugin-vue": "^5.2.4",
    "clsx": "^2.1.1",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-eslint-cli": "8.0.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "svgo": "^3.3.2",
    "tar": "^7.4.3",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^6.3.6",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.2.12"
  },
  "resolutions_disabled": {
    "@argonprotocol/mainchain": "portal:../mainchain/client/nodejs",
    "@argonprotocol/testing": "portal:../mainchain/testing/nodejs",
    "@argonprotocol/bitcoin": "portal:../mainchain/bitcoin/nodejs"
  },
  "resolutions": {
    "axios": "^1.8.2",
    "form-data": "^2.5.4",
    "request": "^2.88.2",
    "tough-cookie": "^4.1.4"
  },
  "packageManager": "yarn@4.9.1"
}
