{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Argonot Operator",
  "version": "1.1.0",
  "identifier": "com.argon.apps",
  "build": {
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Argonot Operator",
        "devtools": true,
        "hiddenTitle": true,
        "width": 1400,
        "height": 1000,
        "decorations": false,
        "resizable": true,
        "alwaysOnTop": false,
        "center": true,
        "maximized": false,
        "minWidth": 1000,
        "minHeight": 800,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "resources": [
      "../resources/*"
    ],
    "category": "DeveloperTool",
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis",
      "app",
      "dmg",
      "appimage",
      "deb"
    ],
    "icon": [
      "argonot-icons/stable/mainnet/32x32.png",
      "argonot-icons/stable/mainnet/128x128.png",
      "argonot-icons/stable/mainnet/128x128@2x.png",
      "argonot-icons/stable/mainnet/icon.icns",
      "argonot-icons/stable/mainnet/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDNjgzNUE1MEU4MTNFNEMKUldSTVBvRU9wVFZvM0tYUUdSWkdnRFo1VnB0NHV6QzVnRnFRdVRXSVRYUWdobS9WbnpnbjYrSVQK",
      "endpoints": [
        "https://raw.githubusercontent.com/argonprotocol/apps/refs/heads/main/release-channels/argonot-stable.json"
      ]
    }
  }
}