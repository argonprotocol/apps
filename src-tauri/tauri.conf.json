{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Argon Commander",
  "version": "0.1.0",
  "identifier": "com.argon.commander.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Argon Commander",
        "hiddenTitle": true,
        "width": 1250,
        "height": 850,
        "decorations": false,
        "resizable": true,
        "alwaysOnTop": false,
        "center": true,
        "maximized": false,
        "minWidth": 1000,
        "minHeight": 800,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
