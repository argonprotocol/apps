{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Argon Commander - Experimental",
  "version": "0.1.0",
  "identifier": "com.argon.commander.experimental",
  "build": {
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Argon Commander",
        "hiddenTitle": true,
        "width": 1250,
        "height": 850,
        "decorations": false,
        "resizable": true,
        "alwaysOnTop": false,
        "center": true,
        "maximized": false,
        "minWidth": 1000,
        "minHeight": 800,
        "shadow": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": []
    }
  },
  "bundle": {
    "active": true,
    "resources": ["../resources/*"],
    "category": "DeveloperTool",
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ2NjE2QzAzOTJGMDQ4MzgKUldRNFNQQ1NBMnhoMW9IWDIrWDREOVpDZnpqYjhUdGM5RW01eDdsM3phYmRtQWVleCtFaXlJOWoK",
      "endpoints": ["https://github.com/argonprotocol/commander/releases/channel-experimental/latest-experimental.json"]
    }
  }
}
