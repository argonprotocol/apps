{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "outDir": "lib"
  },
  "include": ["vitest.config.ts", "src/**/*.ts", "__test__"],
  "exclude": ["lib", "node_modules"]
}
